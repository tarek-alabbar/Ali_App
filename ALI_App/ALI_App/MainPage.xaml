<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:ALI_App"
             x:Class="ALI_App.MainPage">

    <StackLayout Margin="20, 150, 20, 0">

        <Entry x:Name="byNameSearchEntry"
               Placeholder="Enter a name"/>

        <Button Text="Search"
                Margin="0, 0, 0, 0"
                x:Name="byNameSearchButton"
                Clicked="byNameSearchButton_Clicked"/>

        <Entry x:Name="byPlaceSearchEntry" 
               Placeholder="Enter a place"/>

        <Button Text="Search"
                Margin="0, 0, 0, 0"
                x:Name="byPlaceSearchButton"
                Clicked="byPlaceSearchButton_Clicked"/>


    </StackLayout>
</ContentPage>
